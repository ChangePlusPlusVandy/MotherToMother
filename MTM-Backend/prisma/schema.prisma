generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Organization {
  id   Int    @id @default(autoincrement())
  name String @unique
  type String
  user User[]
}

model User {
  id             Int            @id @default(autoincrement())
  organizationId Int
  firstName      String
  lastName       String
  email          String         @unique
  hash           String
  salt           String
  phone          String
  address        String
  city           String
  state          String
  zip            Int
  role           String?
  household      String?
  userType       String
  status         String
  cashDonation   CashDonation[]
  donation       Donation[]
  Organization   Organization   @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId], map: "User_organizationId_fkey")
}

model Donation {
  id                    Int                    @id @default(autoincrement())
  userId                Int
  date                  DateTime               @default(now())
  user                  User                   @relation(fields: [userId], references: [id], onDelete: Cascade)
  DonationDetail        DonationDetail[]
  OutgoingDonationStats OutgoingDonationStats?

  @@index([userId], map: "Donation_userId_fkey")
}

model DonationDetail {
  id           Int      @id @default(autoincrement())
  donationId   Int
  itemId       Int
  usedQuantity Int
  newQuantity  Int
  donation     Donation @relation(fields: [donationId], references: [id], onDelete: Cascade)
  item         Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([donationId, itemId])
  @@index([itemId], map: "DonationDetail_itemId_fkey")
}

model OutgoingDonationStats {
  id           Int      @id @default(autoincrement())
  donationId   Int      @unique
  numberServed Int
  whiteNum     Int
  latinoNum    Int
  blackNum     Int
  nativeNum    Int
  asianNum     Int
  otherNum     Int
  donation     Donation @relation(fields: [donationId], references: [id], onDelete: Cascade)
}

model Item {
  id             Int              @id @default(autoincrement())
  category       String
  name           String
  quantityUsed   Int
  quantityNew    Int
  valueUsed      Float
  valueNew       Float
  DonationDetail DonationDetail[]
}

model Admin {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  role  String
}

model CashDonation {
  id     Int      @id @default(autoincrement())
  userId Int
  date   DateTime @default(now())
  total  Float
  User   User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "CashDonation_userId_fkey")
}

/// View for user dashboard for admin portal
view user_dashboard {
  id           Int     @id @default(0)
  email        String
  name         String @db.VarChar(383)
  phone        String
  address      String @db.Text
  type         String
  status       String
  organization String
}

/// The underlying view does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
view cashDonation_dashboard {
  id           Int      @id @default(0)
  date         DateTime @default(now())
  firstName    String
  lastName     String
  userId       Int      @default(0)
  organization String
  total        Float
}

/// The underlying view does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
view donation_detail {
  id           Int      @id @default(0)
  date         DateTime @default(now())
  organization String
  total        Float
  items        Decimal @db.Decimal(33, 0)
  type         String   @default("") @db.VarChar(8)
  details      Json
}

/// View for report dashboard for admin portal
view report_dashboard {
  id       Int      @id @default(0)
  agency   String
  date     DateTime @default(dbgenerated("'0000-00-00 00:00:00.000'"))
  item     String
  quantity Int      @default(0)
  value    Float?
  total    Float?
  status   String   @default("") @db.VarChar(4)
}
