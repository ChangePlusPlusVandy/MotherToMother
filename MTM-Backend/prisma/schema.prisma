// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id               Int                @id @default(autoincrement())
    organizationID   Int
    firstName        String
    lastName         String
    email            String             @unique
    hash             String
    salt             String
    phone            Int
    address          String
    city             String
    stateZip         Int?
    role             String?
    household        String?
    type             String
    organization     Organization       @relation(fields: [organizationID], references: [id])
    incomingDonation IncomingDonation[]
    outgoingDonation OutgoingDonation[]
}

model Organization {
    id    Int    @id @default(autoincrement())
    name  String
    type  String
    users User[]
}

model DonationDetail {
    id                 Int              @id @default(autoincrement())
    itemID             Int
    quantityOld        Int
    quantityNew        Int
    item               Item             @relation(fields: [itemID], references: [id])
    OutgoingDonation   OutgoingDonation @relation(fields: [outgoingDonationId], references: [id])
    outgoingDonationId Int
    IncomingDonation   IncomingDonation @relation(fields: [incomingDonationId], references: [id])
    incomingDonationId Int
}

model OutgoingDonation {
    id           Int              @id @default(autoincrement())
    requesterID  Int
    requester    User             @relation(fields: [requesterID], references: [id])
    date         DateTime
    numberServed Int
    whiteNum     Int
    latinoNum    Int
    blackNum     Int
    nativeNum    Int
    asianNum     Int
    otherNum     Int
    details      DonationDetail[]
}

model IncomingDonation {
    id      Int              @id @default(autoincrement())
    donorID Int
    date    DateTime
    donor   User             @relation(fields: [donorID], references: [id])
    details DonationDetail[]
}

model Item {
    id       Int              @id @default(autoincrement())
    category String
    name     String
    stockNew Int
    stockOld Int
    valueNew Int
    valueOld Float
    details  DonationDetail[]
}
