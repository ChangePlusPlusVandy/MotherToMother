// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Organization {
  id   Int    @id @default(autoincrement())
  name String        @unique
  type String
  user User[]
}

model User {
  id             Int           @id @default(autoincrement())
  Organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId Int?
  firstName      String
  lastName       String
  email          String        @unique
  hash           String
  salt           String
  phone          String
  address        String
  city           String
  state          String
  zip            Int
  role           String?
  household      String?
  userType       String
  donation       Donation[]
}

model Donation {
  id                    Int                     @id @default(autoincrement())
  userId                Int
  user                  User                    @relation(fields: [userId], references: [id])
  date                  DateTime                @default(now())
  DonationDetail        DonationDetail[]
  OutgoingDonationStats OutgoingDonationStats[]
}

model DonationDetail {
  id           Int      @id @default(autoincrement())
  donationId   Int
  donation     Donation @relation(fields: [donationId], references: [id])
  itemId       Int
  item         Item     @relation(fields: [itemId], references: [id])
  usedQuantity Int
  newQuantity  Int
}

model OutgoingDonationStats {
  id           Int      @id @default(autoincrement())
  donationId   Int      @unique
  donation     Donation @relation(fields: [donationId], references: [id])
  numberServed Int
  whiteNum     Int
  latinoNum    Int
  blackNum     Int
  nativeNum    Int
  asianNum     Int
  otherNum     Int
}

model Item {
  id             Int              @id @default(autoincrement())
  name           String
  quantityUsed   Int
  quantityNew    Int
  valueUsed      Float
  valueOld       Float
  DonationDetail DonationDetail[]
}
