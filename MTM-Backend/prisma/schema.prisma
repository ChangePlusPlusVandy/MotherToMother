generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Organization {
  id   Int    @id @default(autoincrement())
  name String @unique
  type String
  user User[]
}

model User {
  id             Int          @id @default(autoincrement())
  organizationId Int
  firstName      String
  lastName       String
  email          String       @unique
  hash           String
  salt           String
  phone          String
  address        String
  city           String
  state          String
  zip            Int
  role           String?
  household      String?
  userType       String
  donation       Donation[]
  Organization   Organization @relation(fields: [organizationId], references: [id])

  @@index([organizationId], map: "User_organizationId_fkey")
}

model Donation {
  id                    Int                    @id @default(autoincrement())
  userId                Int
  date                  DateTime               @default(now())
  user                  User                   @relation(fields: [userId], references: [id])
  DonationDetail        DonationDetail[]
  OutgoingDonationStats OutgoingDonationStats?

  @@index([userId], map: "Donation_userId_fkey")
}

model DonationDetail {
  id           Int      @id @default(autoincrement())
  donationId   Int
  itemId       Int
  usedQuantity Int
  newQuantity  Int
  donation     Donation @relation(fields: [donationId], references: [id])
  item         Item     @relation(fields: [itemId], references: [id])

  @@index([donationId], map: "DonationDetail_donationId_fkey")
  @@index([itemId], map: "DonationDetail_itemId_fkey")
}

model OutgoingDonationStats {
  id           Int      @id @default(autoincrement())
  donationId   Int      @unique
  numberServed Int
  whiteNum     Int
  latinoNum    Int
  blackNum     Int
  nativeNum    Int
  asianNum     Int
  otherNum     Int
  donation     Donation @relation(fields: [donationId], references: [id])
}

model Item {
  id             Int              @id @default(autoincrement())
  category       String
  name           String
  quantityUsed   Int
  quantityNew    Int
  valueUsed      Float
  valueNew       Float
  DonationDetail DonationDetail[]
}

model Admin {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  role  String
}

/// View for user dashboard for admin portal
view user_dashboard {
  id           Int    @id @default(0)
  email        String
  name         String @default("") @db.VarChar(383)
  phone        String
  address      String @db.Text
  type         String
  organization String
}

/// View for donation details for admin portal
view donation_detail {
  id           Int      @id @default(0)
  date         DateTime @default(now())
  organization String
  total        Float?
  items        Decimal? @db.Decimal(33, 0)
  type         String   @default("") @db.VarChar(8)
  details      Json?
}
